<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.yuqian.food"
              xmlns:fbutton="http://schemas.android.com/apk/res/com.yuqian.food"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_grey"
              tools:context="com.yuqian.food.UI.LoginActivity"
              android:padding="@dimen/home_padding">

    <com.yuqian.food.viewUtil.CircleSmartImageView
        android:id="@+id/userimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:src="@drawable/logo" />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:orientation="horizontal">

        <com.yuqian.food.view.FloatLabeledEditText.FloatLabeledEditText
                android:background="@color/light_grey"
                app:fletPadding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/login_zhanghao"
                      style="@style/login_edit"
                      android:hint="@string/user_name"/>
        </com.yuqian.food.view.FloatLabeledEditText.FloatLabeledEditText>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <com.yuqian.food.view.FloatLabeledEditText.FloatLabeledEditText
                android:background="@color/light_grey"
                app:fletPadding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textPassword"
                      android:id="@+id/login_password"
                      style="@style/login_edit"
                      android:hint="@string/user_pass"/>

        </com.yuqian.food.view.FloatLabeledEditText.FloatLabeledEditText>

    </LinearLayout>

    <com.yuqian.food.util.FButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/login"
            android:id="@+id/login_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            fbutton:shadowEnabled="true"
    />

    <Button
        android:id="@+id/button_test_food_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button_TestFoodList" />
